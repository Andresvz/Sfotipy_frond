@import "normalize.styl"
@import "fonts.styl"

gris_oscura = #333333
gris_claro = #818181
rojo = #ad475c

body
	font-family 'Varela Round' , sans-serif
	font-size 16px
figure 
	margin 0
a
	text-decoration none
img
	vertical-align top
.button-menu
	color gris_oscura
	left .5em
	margin-top -10px
	position absolute
	top 50%
.border-button
	border-bottom 1px solid gris_claro
	
.relative 
	position relative
	
.container
	font-size 0
	padding 1.4rem
	text-align center

.song 
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	
	p 
		margin .5em 0
.name
	color gris_oscura
.menu
	display none
	
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.action
	color white
	margin-right .5em
	&:last-child
		margin-right 0
	font-size 1.2em
	&.gray
		color gris_claro
	
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background  rgba(black,.3)
.relative 
	position relative
	
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		position absolute
		font-size .8em
		top -5px
	.min
		left 0
	.max
		right 0
		
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		width 10px
		height 10px
		background gris_oscura
		border-radius 50%
		position absolute
		right 0
		top -2px
			
.header
	height 3.5em
	
	// a 
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
	
.playing
	&.small
		width 20em
		
